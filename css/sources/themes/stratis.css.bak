@import url('../breakpoint.css');
@import url('../fonts.css');

/**
 * -------------------------
 * @section 1. GENERIC STYLE
 * -------------------------
 */
:root {
    --font: #000;
    --font-alt: #fff;
    --main-bg: #fff;
    --backg: #666;
    --backg-alt: #F9F9F9;
    --theme: #ca3432;

}

body {
    background-color: var(--main-bg);
    color: var(--font);
    font-family: 'os-light';
}

a,
a:hover,
a:focus,
button,
button:hover,
button:focus,
input,
input:hover,
input:focus {
    transition: all 0.5s ease;
}

a,
.icon {
    color: var(--font);
}

a:hover,
a:focus {
    text-decoration: none;
}

.btn
a:focus,
select:focus,
button:focus,
input:focus {
    box-shadow: 0 0 6px 0 #1e90ff;
    outline: 1px solid rgba(30, 144, 255, 0.5);
    outline-offset: 0;
}

button {
    background: none;
    border: none;
}

.slide button {
    border: 1px solid var(--backg-alt);
    border-radius: 3px;
    font-size: 90%;
    margin-bottom: 2px;
}

.slide button:hover {
    border: 1px solid var(--theme);
    background: var(--backg-alt);
}

figcaption {
    font-size: 60%;
    font-style: italic;
}

strong {
    font-family: 'os-regular';
}

blockquote {
    font-style: italic;
    text-align: left;
    padding: 0 0 0 7rem;
    position: relative;
}

blockquote::before {
    content: "ʼʼ";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    font-size: 12rem;
    color: var(--backg);
    line-height: 0.7em;
    letter-spacing: -0.2em;
}

code,
kbd {
    position: relative;
    top: -2px;
    padding: 1px 3px;
    border: 1px solid var(--backg);
    background: var(--backg-alt);
    font-size: 70%;
    line-height: 1em;
    white-space: nowrap;
    border-radius: 2px;
}

h3 code,
h3 kbd {
    background: inherit;
}

pre code {
    border: 0;
    white-space: pre-wrap;
}

.hljs {
    padding: 10px;
}

/** @subsection 1.1 TABLE **/
table {
    width: auto;
    min-width: 70%;
    margin: auto;
}

caption {
    padding: 5px;
    font-size: 60%;
    font-weight: bold;
    text-align: left;
    background: var(--backg-alt);
}

thead {
    border-bottom: 1px solid var(--backg);
}

tbody tr:nth-child(even) {
    background-color: var(--backg-alt);
}

th {
    padding: 10px;
    font-weight: bold;
    text-align: center;
}

td {
    padding: 10px;
    text-align: center;
}

th, td {
    font-size: 60%;
}

/**
 * -------------------------
 * @section 2. TYPO
 * -------------------------
 */

/** @subsection 2.1 HEADINGS **/

h2 {
    color: var(--font);
    margin-bottom: 1.5em;
    /*border-left: 5px solid var(--theme);*/
    font-variant: small-caps;
    line-height: 1.1em;
    /*background: var(--backg-alt);*/
    font-family: 'os-bold';
    position: relative;
}
h2::after {
    content: "";
    position: absolute;
    bottom: -0.5em;
    left: 0;
    width: 2em;
    height: 0.2em;
    background: var(--theme);
}


@media (--medium) {
    h2 {
        /*float: left;*/
    }

    h2 + * {
        clear: both;
    }
}

.couv h2, .end h2 {
    float: none;
    border-left: 0;
    text-align: center;
    background: transparent;
}

h3 {
    padding: 0 5px 5px 5px;
    margin: 0;
    border-top: 2px solid var(--theme);
    background: var(--backg);
    color: var(--font-alt);
    font-variant: small-caps;
    font-weight: normal;
    font-family: 'os-regular';
}

@media (--medium) {
    h3 {
        /*float: left;*/
        margin-bottom: 1em;
    }

    h3 + * {
        clear: both;
    }
}

h4 {
    margin: 0.3em;
}

h5 {
    margin: 0.3em;
}

h6 {
    margin: 0.3em;
}

/** @subsection 2.2 TEXT **/

.slide p,
.slide ul,
.slide ol,
.slide blockquote {
    margin: 0.2em 0 0.5em 0;
    line-height: 130%;
}

.slide ul ul,
.slide ul ol {
    font-size: 100%;
    line-height: 100%;
}

.slide li {
    margin: 0.5em 0;
}

