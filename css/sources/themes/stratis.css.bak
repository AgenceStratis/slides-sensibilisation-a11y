/**
 * -------------------------
 * @section 3. HEADER
 * -------------------------
 */

.main-header h1 {
    font-size: 3vh;
    color: var(--font);
    font-weight: normal;
}

@media (--small) {

    .main-header h1 {
        font-size: 80%;
    }

    .main-header {
        background: var(--main-bg);
        padding: 5px;
        box-shadow: 0 2px 3px #bbb;
    }

}

.modeplan .main-header {
    background: var(--main-bg);
    box-shadow: 0 2px 3px #bbb;
}

/**
 * -------------------------
 * @section 4. VOLET
 * -------------------------
 */

#volet {
    background: var(--main-bg);
}

/**
 * -------------------------
 * @section 5. TOOLBAR
 * -------------------------
 */
.tool-bar {
    background: var(--main-bg);
}

@media (--small) {
    .tool-bar {
        box-shadow: 0 -2px 3px #bbb;
    }
}

.modeplan .tool-bar {
    box-shadow: 0 -2px 3px #bbb;
    background: var(--main-bg);
}

/** @subsection 5.1 NAVIGATION ELEMENTS **/

.select-goto {
    color: var(--font);
    border: none;
}

.slide-counter-current {
    background-color: var(--main-bg);
    color: var(--font);
    border: 1px solid var(--backg);
}

.slide-counter-total {
    background-color: var(--backg);
    color: var(--font-alt);
    border: 1px solid transparent;
}

.btn:hover .icon {
    opacity: 0.5;
}

.btn[disabled="disabled"]:hover {
    opacity: 1;
    cursor: default;
}

/** @subsection 5.2 RELATED LINKS **/

@media (--small) {
    .related {
        background: var(--main-bg);
        border-left: 0;
        border-bottom: 0;
    }
}

.related a {
    padding: 2px 3px;
    font-size: 70%;
    border-radius: 3px;
    text-decoration: none;

}

.related a img {
    position: relative;
    margin-top: -4px;
}

/**
 * -------------------------
 * @section 6. PAGINATION SLIDE LINEAR LAYOUT
 * -------------------------
 */

.index {
    padding-top: 15px;
    border-radius: 0;
}

.index span {
    padding: 0;
    color: var(--font-alt);
    background-color: var(--backg);
}

#navbar li:nth-child(2) {
    display: none;
}

/**
 * -------------------------
 * @section 7. SLIDES
 * -------------------------
 */

.modeplan .slide {
    border-bottom: 2px solid var(--backg);
    padding-top: 1em;
}

.couv,
.end {
    text-align: center;
    color: var(--font);
}

.credit {
    padding: 0;
}

.credit li {
    display: inline-block;
}

.credit a {
    padding: 2px 3px;
    border: 1px solid var(--backg-alt);
    border-radius: 3px;
    text-decoration: none;
}

.credit a:hover,
.credit a:focus {
    background: var(--theme);
    border: 1px solid var(--backg);
}

/** @subsection 7.1 COLUMN **/

@media (--medium) {
    .col-left {
        float: left;
        width: 50%;
        padding: 0 5% 0 0;
    }

    .col-right {
        float: right;
        width: 50%;
        padding: 0 0 0 5%;
    }
}

/** @subsection 7.2 FREAKY DISC **/

.list-disc {
    padding: 0;
}

.list-disc li {
    list-style: none;
}

@media (--bw) {
    .list-disc li {
        float: left;
        width: 50%;
    }
}

@media (--medium) {
    .list-disc li {
        float: left;
        width: 25%;
    }
}

button.disc {
    display: block;
    width: 100%;
    border: none;
    padding-top: 85px;
}

button.disc1 {
    background: transparent url("../img/disc_1_gray.png") center top no-repeat;
}

button.disc1:hover,
button.disc1:focus {
    background: transparent url("../img/disc_1.png") center top no-repeat;
}

/**
 * -------------------------
 * @section 8. TOOL BLOCK (SUMMARY & CONFIG)
 * -------------------------
 */

.tool-block {
    background-color: var(--backg-alt);
    color: var(--font);
    box-shadow: 0 0 10px #000;
}

.tool-block-title {
    padding-top: 5px;
    font-size: 1.2em;
    text-align: center;
    border-bottom: 1px dashed var(--backg);
    text-transform: uppercase;
}

.tool-block li,
.tool-block label,
.tool-block select {
    font-size: 0.75em;
}

/** @subsection 8.1 TOOLS ELEMENTS **/
.tool-block-settings fieldset {
    border: none;
}

.tool-block-settings legend {
    font-size: 1.5em;
    font-variant: small-caps;
}

.help {
    border: 1px solid var(--theme);
    border-radius: 5px;
    background: var(--backg);
    color: var(--font-alt);
}

.tool-block button:hover,
.tool-block button:focus {
    color: var(--font);
}

.btn-setting { /* Save & Default button*/
    background-color: var(--backg);
    border: 1px solid var(--backg);
    color: var(--font-alt);
}

.btn-setting:hover,
.btn-setting:focus {
    background: var(--backg-alt);
    color: var(--font);
}

/**
 * -------------------------
 * @section 9. CSS TRANSITIONS
 * -------------------------
 */

#volet.Flash {
    background: var(--backg);
}

#volet.Rotate {
}

/**
 * -------------------------
 * @section 9. IMG
 * -------------------------
 */

.slide img.margin-normal {
    margin: 1rem 0;
}

@media (--medium){
    .slide img.margin-normal {
        margin: 2rem 0;
    }
}

.slide img.margin-big {
    margin: 2rem 0;
}

@media (--medium){
    .slide img.margin-big {
        margin: 3rem 0;
    }
}

.slide .left {
    float: left;
    margin: 0 2rem 2rem 0;
}

.slide-double--left,
.slide-double::after {
    background: #f2efee;
}
